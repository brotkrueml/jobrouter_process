{
    "name": "brotkrueml/typo3-jobrouter-process",
    "type": "typo3-cms-extension",
    "description": "Connect JobRouter processes with TYPO3",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Chris MÃ¼ller",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-pdo": "*",
        "brotkrueml/jobrouter-client": "^0.9",
        "brotkrueml/typo3-jobrouter-connector": "^0.9",
        "typo3/cms-core": "^9.5",
        "typo3/cms-extbase": "^9.5",
        "typo3/cms-fluid": "^9.5",
        "typo3/cms-form": "^9.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Brotkrueml\\JobRouterProcess\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brotkrueml\\JobRouterProcess\\Tests\\": "Tests"
        }
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "jobrouter_process",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/web"
        }
    },
    "scripts": {
        "fix-cs": ".Build/bin/php-cs-fixer fix"
    }
}
