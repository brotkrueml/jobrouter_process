{
	"name": "brotkrueml/typo3-jobrouter-process",
	"description": "Connect JobRouter® processes with TYPO3",
	"license": "GPL-2.0-or-later",
	"type": "typo3-cms-extension",
	"keywords": [
		"TYPO3 CMS",
		"TYPO3 extension",
		"JobRouter",
		"Process",
		"Workflow"
	],
	"authors": [
		{
			"name": "Chris Müller",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/brotkrueml/typo3-jobrouter-process/issues",
		"source": "https://github.com/brotkrueml/typo3-jobrouter-process",
		"docs": "https://typo3-jobrouter.readthedocs.io/projects/process/"
	},
	"require": {
		"php": ">=7.3",
		"ext-json": "*",
		"ext-pdo": "*",
		"brotkrueml/jobrouter-client": "^1.0",
		"brotkrueml/typo3-jobrouter-base": "^1.2",
		"brotkrueml/typo3-jobrouter-connector": "^1.0",
		"symfony/polyfill-php80": "^1.15",
		"typo3/cms-backend": "^10.4.11 || ^11.5.3",
		"typo3/cms-core": "^10.4.11 || ^11.5.3",
		"typo3/cms-extbase": "^10.4.11 || ^11.5.3",
		"typo3/cms-fluid": "^10.4.11 || ^11.5.3",
		"typo3/cms-form": "^10.4.11 || ^11.5.3",
		"typo3/cms-frontend": "^10.4.11 || ^11.5.3"
	},
	"require-dev": {
		"brotkrueml/coding-standards": "~2.0.0",
		"captainhook/captainhook": "^5.10",
		"ergebnis/composer-normalize": "~2.20.0",
		"php-coveralls/php-coveralls": "^2.4",
		"phpstan/extension-installer": "^1.1",
		"phpstan/phpstan": "1.6.8",
		"phpunit/phpunit": "^9.5",
		"rector/rector": "0.12.23",
		"saschaegerer/phpstan-typo3": "^1.1",
		"symfony/yaml": "^4.4 || ^5.4 || ^6.0",
		"symplify/phpstan-rules": "^10.1",
		"typo3/cms-dashboard": "^10.4.11 || ^11.5.3"
	},
	"suggest": {
		"co-stack/logs": "Backend module for displaying logs written to log table",
		"typo3/cms-dashboard": "Use dashboard widgets for information about instance starts"
	},
	"autoload": {
		"psr-4": {
			"Brotkrueml\\JobRouterProcess\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\JobRouterProcess\\Tests\\": "Tests"
		}
	},
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true,
			"phpstan/extension-installer": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"bin-dir": ".Build/bin",
		"sort-packages": true,
		"vendor-dir": ".Build/vendor"
	},
	"extra": {
		"branch-alias": {
			"dev-main": "1.1.x-dev"
		},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"extension-key": "jobrouter_process",
			"web-dir": ".Build/web"
		}
	},
	"scripts": {
		"post-autoload-dump": ".Build/bin/captainhook install -f -s"
	}
}
