{
	"name": "brotkrueml/typo3-jobrouter-process",
	"description": "Connect JobRouter® processes with TYPO3",
	"license": "GPL-2.0-or-later",
	"type": "typo3-cms-extension",
	"keywords": [
		"TYPO3 CMS",
		"TYPO3 extension",
		"JobRouter",
		"Process",
		"Workflow"
	],
	"authors": [
		{
			"name": "Chris Müller",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/brotkrueml/typo3-jobrouter-process/issues",
		"source": "https://github.com/brotkrueml/typo3-jobrouter-process",
		"docs": "https://typo3-jobrouter.readthedocs.io/projects/process/"
	},
	"require": {
		"php": ">=8.1",
		"ext-pdo": "*",
		"brotkrueml/jobrouter-client": "^1.0",
		"brotkrueml/typo3-jobrouter-base": "^1.4@dev",
		"brotkrueml/typo3-jobrouter-connector": "^1.0",
		"typo3/cms-backend": "^11.5.3",
		"typo3/cms-core": "^11.5.3",
		"typo3/cms-extbase": "^11.5.3",
		"typo3/cms-fluid": "^11.5.3",
		"typo3/cms-form": "^11.5.3",
		"typo3/cms-frontend": "^11.5.3"
	},
	"require-dev": {
		"brotkrueml/coding-standards": "~4.0.0",
		"ergebnis/composer-normalize": "~2.29.0",
		"php-coveralls/php-coveralls": "^2.5",
		"phpstan/extension-installer": "^1.2",
		"phpstan/phpstan": "1.9.11",
		"phpunit/phpunit": "^9.5",
		"rector/rector": "0.15.7",
		"saschaegerer/phpstan-typo3": "^1.8",
		"symfony/yaml": "^5.4 || ^6.0",
		"symplify/phpstan-rules": "^11.1",
		"tomasvotruba/cognitive-complexity": "^0.0.5",
		"typo3/cms-dashboard": "^11.5.3",
		"typo3/testing-framework": "^6.16"
	},
	"suggest": {
		"typo3/cms-dashboard": "Use dashboard widgets for information about instance starts"
	},
	"autoload": {
		"psr-4": {
			"Brotkrueml\\JobRouterProcess\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\JobRouterProcess\\Tests\\": "Tests"
		}
	},
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true,
			"phpstan/extension-installer": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"bin-dir": ".Build/bin",
		"sort-packages": true,
		"vendor-dir": ".Build/vendor"
	},
	"extra": {
		"branch-alias": {
			"dev-main": "2.0.x-dev"
		},
		"typo3/cms": {
			"app-dir": ".Build",
			"extension-key": "jobrouter_process",
			"web-dir": ".Build/web"
		}
	}
}
